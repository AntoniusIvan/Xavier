             xmlns:local="clr-namespace:HybridDMS"
             xmlns:pages="clr-namespace:HybridDMS.Components.Pages"
             xmlns:pagesShared="clr-namespace:HybridDMS.Components.Pages;assembly=HybridDMS.Components"
             x:Class="HybridDMS.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

